<div class="fill-form input_form">
<%= simple_form_for(@user, :html => { :class => 'form-horizontal', :multipart => true , :id => "signup_user"}) do |f| %>
  <%= f.error_notification %>
  <%= f.input :fullname, :required => false, :input_html => { :class => "span4"},:label => "ชื่อ" %>
  <%= f.input :email, :required => false, :input_html => { :class => "span4"} ,:label => "อีเมล์"%>
  <%= f.input :password ,:required => false , :input_html => { :id => "input_password" } ,:label => "รหัสผ่าน"%>
  <%= f.input :password_confirmation,:required => false,:label => "ยืนยันรหัสผ่าน" %>
  <% if signed_in? %>
  <% if current_user.admin? %>
  <%= f.input :admin,:label => "ผู้ดูแลระบบ" %>
  <% end %>
  <% end %>
  <div class="form-actions">
    <input type="submit" class="btn btn-primary" value="สร้าง"/>&nbsp;&nbsp;&nbsp;<a href="/users" class="btn btn-danger">ยกเลิก</a>
  </div>
</div>
<% end %>