<div class="page-header">
  <a href="news/new" class="btn btn-primary pull-right" id="button-create"><i class="icon-white icon-plus"></i> Create News</a>
  <h1>All News<small></small></h1>
</div>

<table class="display" id="datatables-newss">
  <thead>
  <tr>
    <th>Title</th>
    <th>Detail</th>
    <th>Province</th>
    <th>File</th>
    <th><i class="icon-tags"></i> Tag</th>
    <th>Created_at</th>
    <th>Action</th>
  </tr>
  </thead>
  <tbody>
<% @news.each do |news| %>
  <tr>
    <td><%= link_to truncate(news.title, :length => 30),news_path(news) %></td>
    <td><%= truncate(news.detail, :length => 40 )%></td>
    <td><%= news.province.province %></td>
    <td><% unless news.attachfiles.empty? %>
            <% news.attachfiles.each do |attach| %>
            <% if attach.file_content_type.split("/").first == "image" %>
              <%= link_to image_tag(attach.file.url, :height => '50', :width => '50'),attach.file.url, :class => "colorbox", :title => "#{attach.file_file_name}" %>&nbsp;
            <% else %>
            <%= link_to image_tag('pdf-icon.png', :height => '50', :width => '50'),attach.file.url %>
            <% end %>
            <% end %>
          <% else %>
          <% end %>
    </td>
    <td>
  <%= raw news.tag_list.split(',').map {|t| link_to t,tags_tag_name_path(:name => t) }.join(', ')%>
    </td>
    <td><%= news.created_at.strftime("%d %B %Y") %></td>
    <td><a href="/news/<%= news.id %>" class="btn btn-info" id="button-create"><i class="icon-white icon-zoom-in"></i></a>
      <a href="<%= edit_news_path(news) %>" class="btn btn-primary" id="button-create"><i class="icon-white icon-edit"></i></a>
       <a href="/news/<%= news.id %>" data-confirm="Are you sure?" data-method="delete" class="btn btn-danger" id="button-create" alt="Delete"><i class="icon-white icon-trash"></i></a></td>
  </tr>
<% end %>
</tbody>
</table>

<br />


