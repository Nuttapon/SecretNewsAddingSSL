<% provide(:title, "Sign in") %>
<div class="logo"><%= image_tag 'codeapp.png'%></div>
<br>
<div style="width:450px;margin:auto;">
  <div class="section">
      <div class="section-header">
          <h3>Log in to Secret News</h3>
          <ul>
            <%= link_to 'Home',root_path %>&nbsp;&nbsp;&nbsp;<%= link_to 'Sign up', signup_path %>
          </ul>
      </div>
      <div class="section-body control-group">
      <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>"><%= value %>
        <button class="close" data-dismiss="alert">Ã—</button></div>
      <% end %>
      <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email, :class => "span0" %>

      <%= f.label :password %>
      <%= f.password_field :password, :class => "span0" %>
      <div class="forgotpassword"><a href="password_resets/new">Forgot your password?</a></div>

      <div class="form-actions">
          <div class="row form-inline">
            <div class="span2" style="width:65px">
            <input class="btn btn-custom btn-large" name="commit" type="submit" value="Log in">

            </div>
            <div class="span3" style="padding-top:10px">
            <label class="checkbox" for="remember_me">
            <input name="remember_me" type="hidden" value="0">
            <input id="remember_me" name="remember_me" type="checkbox" value="1">
            Remember me
            </label>
            </div>
          </div>
    </div>
    <% end %>

    </div>
  </div>
</div>
