<div class="hero-unit">
<div class="breadcrumb titlebar span2"><h3>แก้ไขข่าวด่วน</h3></div>
<div class="fill-form input_form">
<%= simple_nested_form_for(@hotnews, :html => { :multipart => true,:class => 'form-horizontal', :id => 'new_hotnews'}) do |f| %>
  <%= f.error_notification %>

  <%= f.input :title,:required => false, :input_html => { :class => "span5"} ,:label => "หัวข้อข่าว" %>
  <div class="control-group string optional"><label class="string optional control-label" for="hotnews_title">คำแนะนำ</label><div class="controls"><input class="string optional span5" id="hotnews_title" name="suggest" size="50" type="text" value="<%= @value %>"></div></div>


  <%= f.fields_for :attachfile_hotnews do |builder| %>
    <div class="form-attachfile">
      <%= builder.input :file_hotnews , :input_html => {:class => "form-inline", :id => "new_file"},:label => "ไฟล์ข่าว"  %>
      <%= builder.link_to_remove "ลบ" %>
      </div>
    <% end %>
    <%= f.link_to_add "+ เพิ่มไฟล์", :attachfile_hotnews %>

  <div class="form-actions">
    <input type="submit" class="btn btn-primary" value="บันทึก"/>&nbsp;&nbsp;&nbsp;<a href="/hotnews" class="btn btn-danger">ยกเลิก</a>
  </div>
</div>
<% end %>
</div>