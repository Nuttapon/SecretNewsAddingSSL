<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "secret news", root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right">
          <li class="<%= 'active' if current_page? (root_path) %>"><%= link_to "Home", root_path %></li>
          <li class="<%= 'active' if current_page? (organizations_path) %>"><%= link_to "Organization", organizations_path %></li>
          <% if signed_in? %>
          <li class="<%= 'active' if current_page? (news_index_path) %>"><%= link_to "News", news_index_path %></li>          
          <% if current_user.admin? %>
          <li class="<%= 'active' if current_page? (users_path) %>"><%= link_to "Users", users_path %></li>
          <% end %>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-user icon-white"></i>Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                <li></li>
                <li>
                  <%= link_to "Sign out", signout_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Sign in", signin_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>
